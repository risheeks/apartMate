<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="8"
            android:id="@+id/tv_groceryReminderTimeAdd"
            android:text="Enter Grocery Reminder Time"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_groceryReminderTimeAdd"
            android:ems="8"
            android:inputType="time"
            android:hint= "HH:MM" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_groceryReminderTimeAdd"
            android:ems="8"
            android:text="Submit"
            />
    </LinearLayout>

</RelativeLayout>